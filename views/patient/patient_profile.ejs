        <div class="card mb-6">
          <div class="card-header">SPECIALTY CARE
            <p>ADULTS & CHILDREN</p>
          </div>
            <div class="card-body">

              <p><a href="/patient/profile/viewalldoctors" class="btn btn-large dashboard-button">See a Doctor Now</a></p>
              <p><a href="/patient/profile/viewalldoctors" class="btn btn-large dashboard-button" style="background-color: white;color: #004A7D;border:1px solid rgb(190, 190, 190)">Schedule an Appointment</a></p>
              <p class="card-text lead" style="font-size: 1.05rem;text-align: left;">Top issues our board-certified doctors & pediatricians can treat:</p>
              <p class="lead" style="text-align:left;margin-top: -30px;letter-spacing: 1px;"><i class="fas fa-heartbeat" style="color:#AE1438;font-size: 1.2rem;margin-right:10px ;"></i>Cold & Flu</p>
              <p class="lead" style="text-align:left;margin-top: -30px;letter-spacing: 1px;"><i class="fas fa-heartbeat" style="color:#AE1438;font-size: 1.2rem;margin-right:10px ;"></i>Skin Issues & Rashes</p>
              <p class="lead" style="text-align:left;margin-top: -30px;letter-spacing: 1px;"><i class="fas fa-heartbeat" style="color:#AE1438;font-size: 1.2rem;margin-right:10px ;"></i>Sinus Infections</p>
              <p class="lead" style="text-align:left;margin-top: -30px;letter-spacing: 1px;"><i class="fas fa-heartbeat" style="color:#AE1438;font-size: 1.2rem;margin-right:10px ;"></i>UTIs</p>
             
              <p><a href="#" class="btn btn-large dashboard-button" style="background-color: white;color: #004A7D;border:1px solid rgb(190, 190, 190)">Learn More</a></p>

          </div>
        </div>
      </div>
      <div class="col-lg-5" style="margin: 1rem;padding: 1rem;">
        <div class="card mb-5">
          <div class="card-header">MENTAL CARE
            <p>ADULTS & CHILDREN</p>
          </div>
            <div class="card-body">

              <p><a href="/patient/profile/viewalldoctors" class="btn btn-large dashboard-button">See a Doctor Now</a></p>
              <p><a href="/patient/profile/viewalldoctors" class="btn btn-large dashboard-button" style="background-color: white;color: #004A7D;border:1px solid rgb(190, 190, 190)">Schedule an Appointment</a></p>
              <p class="card-text lead" style="font-size: 1.05rem;text-align: left;">Top issues our licensed therapists & psychiatrists can treat:</p>
              <p class="lead" style="text-align:left;margin-top: -30px;letter-spacing: 1px;"><i class="fas fa-heartbeat" style="color:#AE1438;font-size: 1.2rem;margin-right:10px ;"></i>Depression</p>
              <p class="lead" style="text-align:left;margin-top: -30px;letter-spacing: 1px;"><i class="fas fa-heartbeat" style="color:#AE1438;font-size: 1.2rem;margin-right:10px ;"></i>Anxiety & Stress</p>
              <p class="lead" style="text-align:left;margin-top: -30px;letter-spacing: 1px;"><i class="fas fa-heartbeat" style="color:#AE1438;font-size: 1.2rem;margin-right:10px ;"></i>Trauma & Loss</p>
              <p class="lead" style="text-align:left;margin-top: -30px;letter-spacing: 1px;"><i class="fas fa-heartbeat" style="color:#AE1438;font-size: 1.2rem;margin-right:10px ;"></i>Addictions</p>
             
              <p><a href="#" class="btn btn-large dashboard-button" style="background-color: white;color: #004A7D;border:1px solid rgb(190, 190, 190)">Learn More</a></p>

          </div>
        </div>
      </div>
<!-- 
      <div class="card mb-5">
        <a class="btn btn-lg btn-primary" href="/doctor/viewall"> Book An Appointment</a>
      </div>
     -->
    
    </div>  
  </div>
</section>


<!-- Meeting Content Below -->
<section class="meeting-content content">
  
      <h5 style="margin-bottom: 2rem;font-weight: 700;letter-spacing: 1px;color: #004A7D;">ALL APPOINTMENTS</h5>

  <% User.meetings.reverse().forEach(function(meeting){ %>
      <%if(meeting.payment===true){ %>
        <div class="table-responsive">
          <table class="table table-bordered" style="text-align: center;letter-spacing: 1.5px;">
            <thead style="font-weight: 700;background-color: #EAF0F1">
              <tr>
                <td>Doctor</td>
                <td>Date</td>
                <td>Time</td>
                <td>Join</td>
              </tr>
              <tbody>
                <tr>
                  <td class="text-capitalize"><%= meeting.doctor.firstName %> <%= meeting.doctor.lastName %></td>
                  <td><%= meeting.date %></td>
                  <td><%= meeting.time %></td>
                  <td><a href="<%= meeting.link %>" target="_blank" class="btn btn-primary">Join call</a></td>
                </tr>
              </tbody>
            </thead>
          </table>
        </div>
      <%}%>
  <% }) %>
</section>


<!-- Prescription Content Below -->
<section class="prescription-content content">
      <h5 style="margin-bottom: 2rem;font-weight: 700;letter-spacing: 1px;color: #004A7D;">ALL  PRESCRIPTIONS</h5>

  <div>
    
    <% User.prescriptions.reverse().forEach(function(prescription){ %>

      <div class="todo-cmp">
        <div class="todo-cmp__header">
          <h2>Doctor: <%= prescription.doctor.firstName %> <%= prescription.doctor.lastName %></h2>
          <p> <%=prescription.date%></p>
        </div>

        <ul class="todo-cmp__list">
          <% let l = prescription.medicines.length %>
          <%for( let i=0; i < l ; i++){%>
          <li>
            <label for="todo-01">
              <span><%= prescription.medicines[i] %></span>
            </label>
          </li>	
          <%}%>
        </ul>
      </div>

    <% }) %>
  </div>
 
</section>


<!-- payment Content Below -->
<section class="payment-content content">
  <div>
    
      <h5 style="margin-bottom: 2rem;font-weight: 700;letter-spacing: 1px;color: #004A7D;">ALL PAYMENTS</h5>
   
      <% User.payments.reverse().forEach(function(payment){ %>
             
          <div class="table-responsive">
            <table class="table table-bordered" style="text-align: center;letter-spacing: 1.5px;">
              <thead style="font-weight: 700;background-color: #EAF0F1">
                <tr>
                  <td>Doctor</td>
                  <td>Status</td>
                  <td>Transaction ID</td>
                  <td>Amount</td>
                  <td>Payment Date</td>
                  <td>PayuMoneyID</td>
                </tr>
                <tbody>
                  <tr>
                    <td class="text-capitalize"><%= payment.doctor.firstName %> <%= payment.doctor.lastName %></td>
                    <td class="text-capitalize"><%= payment.status %></td>
                    <td><%= payment.txnid %></td>
                    <td><%= payment.amount %></td>
                    <td><%= payment.dateTime %></td>
                    <td><%= payment.payuMoneyId %></td>
                  </tr>
                </tbody>
              </thead>
            </table>
          </div>
       
    <% }) %>
  </div>
</section>


<!-- messages Content Below -->
<section class="message-content content">
  <div>
    <h5 style="margin-bottom: 2rem;font-weight: 700;letter-spacing: 1px;color: #004A7D;">MESSAGES: </h5>
    <div class="card mb-5">
      <p>All Messages here</p>
    </div>
  </div>
</section>







