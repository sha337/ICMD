<%- include("../partials/header") %>

<div class="container" style="margin-top: 80px;">
    
    <h1 style="text-align: center;">Please make the payment to confirm your visit</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/payment_gateway/payumoney" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="firstname" placeholder="First Name" value="<%= currentUser.firstName %>"/>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="udf1" placeholder="last Name" value="<%=currentUser.lastName%>"/>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="udf2" placeholder="Phone Number" value="<%=currentUser.phoneNumber%>"/>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="email" value="" placeholder="E-mail" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="udf3" value="" placeholder="Address"/>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="amount" value="" placeholder="Enter Amount"/>
            </div>
            <div class="form-group">
                <input type="hidden" name="service_provider" value="payu_paisa"/>
            </div>
            <div class="form-group">
                <input type="text" class="product" name="productinfo" value="Donation"/>
            </div>

            <div class="form-group">
                <button style="background-color: #0A3D62; color: white;" class="btn btn-lg btn-block">Continue</button>
            </div>
        </form>
        <a href="/">Go Back!</a>
    </div>

   
</div>


<%- include("../partials/footer") %>